<div class="article">
<h3>{{this.title}}</h3>
<img class="image" src="{{this.imageLink}}"/>
<p class="description">{{this.desc}}</p>
<a class="btn btn-outline-primary linkArticle" target="_blank" href="{{this.link}}">Link To Article</a>

{{#if this.saved}}
<button data-id="{{this._id}}" class="btn btn-outline-danger saveButton">Unsave Article</button>
{{else}}
<button data-id="{{this._id}}" class="btn btn-outline-secondary saveButton">Save Article</button>
{{/if}}
<button class="btn btn-outline-success commentButton">Comment</button>
<form class="commentForm">
      <div class="form-group">
    <label for="noteTitle">Note Title</label>
    <input type="text" class="form-control" id="noteTitle">
  </div>
  <div class="form-group">
    <label for="noteBody">Note Body</label>
    <textarea class="form-control" id="noteBody" rows="3"></textarea>
  </div>
  <button data-id="{{this._id}}" type="submit" class="btn btn-outline-primary" id="submitComment">Submit</button>
</form>
</div>